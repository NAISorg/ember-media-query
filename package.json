{
  "private": true,
  "repository": "",
  "license": "MIT",
  "author": "",
  "scripts": {
    "build": "pnpm --filter ember-media-query build",
    "lint": "pnpm --filter '*' lint",
    "lint:fix": "pnpm --filter '*' lint:fix",
    "prepare": "pnpm build",
    "start": "concurrently 'pnpm:start:*' --restart-after 5000 --prefixColors auto",
    "start:addon": "pnpm --filter ember-media-query start --no-watch.clearScreen",
    "start:test-app": "pnpm --filter test-app start",
    "test": "pnpm --filter '*' test",
    "test:ember": "pnpm --filter '*' test:ember",
    "lint:format": "pnpm --filter '*' lint:format",
    "lint:format:fix": "pnpm --filter '*' lint:format:fix"
  },
  "packageManager": "pnpm@10.5.2",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.0.3",
    "prettier-plugin-ember-template-tag": "^2.0.2"
  }
}
